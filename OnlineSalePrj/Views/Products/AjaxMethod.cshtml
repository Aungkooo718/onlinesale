@model OnlineSalePrj.ViewModel.ProductPruchaseItemViewModel
@{
    ViewData["Title"] = "AjaxMethod";
    Layout = "~/Views/_Layout.cshtml";
}
<div class="container" style="padding-top:25px">
    <h1 style="font-weight:bolder;text-align:center">ProductList</h1><br />
    <div style="width: 500px">
        <table id="tblCustomers" class="table table-bordered" cellpadding="0" cellspacing="0" border="1" style="border-collapse:collapse" >
            <thead class="thead-dark">
                <tr>

                    <th>Image</th>
                    <th>Name</th>
                    <th>Price</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Products)
                {
                    <tr>
                        <td><img src="@("~/Image/"+item.ImageName)" asp-append-version="true" width=100 height=100 /></td>
                        <td>
                            <label class="text-center">@item.Name</label>

                            <input type="hidden" value="@item.Name" id="Name@(item.ID)" />
                            <input type="hidden" value="@item.ID" />
                        </td>
                        <td>
                            <label class="text-center">@item.Price</label>
                            <input type="hidden" value="@item.Price" id="Price@(item.ID)" />
                            <input type="hidden" value="@item.ID" />
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
@section scripts{
    <script>
        $(document).ready(function () {
            $('#tblCustomers').DataTable();
        });
    </script>
}

@model OnlineSalePrj.Models.Product

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/_Layout.cshtml";
}
    <div class="container" style="padding-top:50px;">
        <h1 style="font-weight:bolder;text-align:center">Product Details</h1><hr /><br />

        <div>
            
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Name)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Qty)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Qty)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Price)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Price)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ProductType)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ProductType)
                </dd>
                <dt class="col-sm-2">
                    @*@Html.DisplayNameFor(model => model.ImageName)*@
                    Image
                </dt>
                <dd class="col-sm-10">
                    @*@Html.DisplayFor(model => model.ImageName)*@
                    <img src="@("~/Image/"+Model.ImageName)" asp-append-version="true" width=100 height=100 />
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ProductCategory)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ProductCategory.Name)
                </dd>
            </dl>
        </div>
        <div>
            <a class="btn btn-secondary" asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
            <a class="btn btn-primary" asp-action="Index">Back to List</a>
        </div>
        </div>
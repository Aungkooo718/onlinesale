@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
   
        <ul class="navbar-nav">
            @if (SignInManager.IsSignedIn(User))
            {
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage"  style="-webkit-text-fill-color: white !important;">Hello @User.Identity.Name!</a>
                </li>
                <li class="nav-item">
                    <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                        <button type="submit" class="nav-link btn btn-link text-dark" style="-webkit-text-fill-color: white !important;">Logout</button>
                    </form>
                </li>
            }
            else
            {
                <li class="nav-item" style="color:white;">
                    <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register" style="-webkit-text-fill-color: white !important;">Register</a>
                </li>
                
                <li class="nav-item" style="color:white;" >
                    <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login"  style="-webkit-text-fill-color: white !important;">Login</a>
                </li>
            }
        </ul>
    